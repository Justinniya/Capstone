<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient0range"
    tools:context=".Python1Q13">
    <LinearLayout
        android:background="@drawable/gradient0range"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="40dp"
            android:layout_height="380dp"
            android:contentDescription="Quiz">

            <TextView
                android:id="@+id/Question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient0range"
                android:gravity="center"
                android:radius="10dp"
                android:text="Alex is learning about while loops in Python and wants to use them to repeatedly execute a block of code as long as a certain condition, such as x &lt; 5, is true.\n\nx = 1       \n\nwhile        :\n\n
    print(x)\n
    x += 1 "
                android:textColor="@color/white"
                android:textSize="15dp"
                app:fontFamily="monospace"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fill"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="173dp"
                android:layout_marginTop="210dp"
                android:color="@color/black"
                android:hint=""
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:fontFamily="monospace"
                android:textStyle="bold"  />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <Button
                android:id="@+id/Submit"
                android:layout_width="130dp"
                android:layout_marginLeft="200dp"
                android:layout_height="match_parent"
                android:text="Submit" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>