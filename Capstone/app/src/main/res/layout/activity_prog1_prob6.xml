<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Prog1Prob6">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">


        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@color/BackGround"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintStart_toStartOf="parent"
                app:title="Back"
                tools:ignore="MissingConstraints" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Alex is working on a Python program that requires using a tuple to store and manage a fixed collection of values, such as (1, 2, 3, 4, 5) then print. \n"
                android:textColor="@color/white"
                android:background="@color/BackGround"
                android:textSize="16sp"
                app:fontFamily="monospace" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:layout_marginBottom="35dp">


                <EditText
                    android:id="@+id/textEditor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint=""
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/lineNumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/textEditor"
                    android:layout_alignBottom="@id/textEditor"
                    android:layout_marginTop="11dp"
                    android:gravity="start|top"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </RelativeLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/RunProb1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/run"
            android:clickable="true"
            android:contentDescription="Run"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/BackGround"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/tabMode"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="end"
                    android:textSize="15sp"
                    android:text="Tab" />
                <Button
                    android:id="@+id/OpenP"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="center|top"
                    android:padding="2dp"
                    android:textSize="19sp"
                    android:text="(" />
                <Button
                    android:id="@+id/CLoseP"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="center|top"
                    android:padding="2dp"
                    android:textSize="19sp"
                    android:text=")" />
                <Button
                    android:id="@+id/Squote"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="center|top"
                    android:padding="2dp"
                    android:textSize="19sp"
                    android:text="'" />
                <Button
                    android:id="@+id/OpenB"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="center|top"
                    android:padding="2dp"
                    android:textSize="19sp"
                    android:text="{" />
                <Button
                    android:id="@+id/CloseB"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="center|top"
                    android:padding="2dp"
                    android:textSize="19sp"
                    android:text="}" />
                <Button
                    android:id="@+id/OpenS"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="center|top"
                    android:padding="2dp"
                    android:textSize="19sp"
                    android:text="[" />
                <Button
                    android:id="@+id/CloseSS"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="center|top"
                    android:padding="2dp"
                    android:textSize="19sp"
                    android:text="]" />
                <Button
                    android:id="@+id/Equals"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="center|top"
                    android:padding="2dp"
                    android:textSize="19sp"
                    android:text="=" />
                <Button
                    android:id="@+id/Colon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackGround"
                    android:gravity="center|top"
                    android:padding="2dp"
                    android:textSize="19sp"
                    android:text=":" />
            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>